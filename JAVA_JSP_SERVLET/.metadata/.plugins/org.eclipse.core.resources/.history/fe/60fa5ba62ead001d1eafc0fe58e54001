$(document).ready(function (){
	$("#login").validate ({
		rules: {
			name: {
				required: true,
			},
			password: {
				required: true,
				minlength: 6,
			},			
		},
		messages: {
			name: {
				required: "--Vui lòng nhập dữ liệu--",				
			},
			password: {
				required: "--Vui lòng nhập mật khẩu--",
				minlength: "--Vui lòng nhập ít nhất 6 ký tự--",
			},			
		},
	})
});