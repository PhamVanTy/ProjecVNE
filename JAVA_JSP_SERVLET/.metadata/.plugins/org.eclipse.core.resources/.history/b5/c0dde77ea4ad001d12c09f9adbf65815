$(document).ready(function (){
	$(".form").validate ({
		rules: {
			username: {
				required: true,
				minlength: 6,
				maxlength: 32,
			},
			password: {
				required: true,
				minlength: 6,
			},
			repassword: {
				equalTo: "#password",
			},
			fullname: {
				required: true,
				minlength: 6,
			},
			birthday: {
				date: true,
			},
			email: {
				email: true,
			},
			moreinfo: {
				required: true,
				minlength: 10,
			},
			phone:{
				digits: true,
				minlength: 10,
				maxlength: 11,
			}
		},
		messages: {
			username: {
				required: "--Vui lòng nhập tên đăng nhập--",
				minlength: "--Tên truy cập ít nhất 6 ký tự--",
				maxlength: "--Tên truy cập nhiều nhất 32 ký tự--",
			},
			password: {
				required: "--Vui lòng nhập mật khẩu--",
				minlength: "--Vui lòng nhập ít nhất 6 ký tự--",
			},
			repassword: {
				equalTo: "--Không đúng mật khẩu--",
			},
			fullname: {
				required: "--Vui lòng nhập tên của bạn--",
				minlength: "--Tên ít nhất 5 ký tự--",
			},
			birthday: {
				date: "--Vui lòng nhập ngày sinh của bạn--",
			},
			email: {
				email: "--Vui lòng nhập đúng email của bạn--",
			},
			moreinfo: {
				required: "--Vui lòng nhập thêm thông tin của bạn--",
				minlength: "--Vui lòng nhập ít nhất 5 ký tự--",
			},
			phone:{
				digits: "--Nhập sai định dạng số--",
				minlength: "--SDT ít nhất 10 chữ số--",
				maxlength: "--SDT nhiều nhất có 11 chữ số--"
			}
		},
	})
})